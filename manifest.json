{
  "name": "Earth Station",
  "description" : "The goals of this software are to: point an antenna at an orbiting satellite; add Doppler correction to radio communications; provide the user with a display of what's going on.",
  "version": "0.2",

  "manifest_version": 2,
  "minimum_chrome_version": "23",

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write"]},
    "serial",
    "fullscreen",
    "storage"
  ],
  "requirements": {
    "3D": {
      "features": ["webgl"]
    }
  },
  "offline_enabled" : true
}
